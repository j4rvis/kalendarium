<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.j4rvis.kalendarium">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivityNavDrawer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.CategoryDetailActivity"
            android:label="@string/category_detail_activity"></activity>
        <activity
            android:name=".activities.ExpenseCreateActivity"
            android:label="@string/expense_create_activity"
            android:parentActivityName=".activities.MainActivityNavDrawer"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivityNavDrawer" />
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_activity"
            android:parentActivityName=".activities.MainActivityNavDrawer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivityNavDrawer" />
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
    </application>

</manifest>