<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textViewMonthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31,28"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewMonth"
        app:layout_constraintLeft_toRightOf="@+id/textViewMonth"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonMonthEdit"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/textViewMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="Dezember 2017"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_euro"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewMonthValue"
        app:layout_constraintLeft_toRightOf="@+id/textViewMonthValue"
        android:layout_marginLeft="0dp"/>

    <ImageButton
        android:id="@+id/imageButtonMonthEdit"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_edit_light_24dp"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.666"/>

</android.support.constraint.ConstraintLayout>