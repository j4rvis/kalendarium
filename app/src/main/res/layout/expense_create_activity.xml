<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/blue_grey_400"
                                             android:orientation="vertical">

    <Button
        android:id="@+id/button_topic_activities"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:background="@color/amber_600"
        android:drawableTop="@drawable/ic_local_bar_light_24dp"
        android:padding="8dp"
        android:text="@string/category_activities"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_topic_household"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp"
        tools:ignore="RtlHardcoded"/>

    <Button
        android:id="@+id/button_topic_cosmetics"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:background="@color/green_500"
        android:drawableTop="@drawable/ic_spa_light_24dp"
        android:padding="8dp"
        android:text="@string/category_cosmetics"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_topic_games"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp"
        tools:ignore="RtlHardcoded"/>

    <Button
        android:id="@+id/button_topic_games"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/red_500"
        android:drawableTop="@drawable/ic_videogame_asset_light_24dp"
        android:padding="8dp"
        android:text="@string/category_games"
        app:layout_constraintLeft_toRightOf="@+id/button_topic_cosmetics"
        app:layout_constraintRight_toLeftOf="@+id/button_topic_food"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_topic_household"
        />

    <Button
        android:id="@+id/button_topic_plus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        android:drawableTop="@drawable/ic_add_light_24dp"
        android:padding="8dp"
        android:text="@string/category_plus"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_topic_games"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_topic_games"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button_topic_games"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/button_topic_food"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginRight="24dp"
        android:background="@color/yellow_600"
        android:drawableTop="@drawable/ic_restaurant_light_24dp"
        android:padding="8dp"
        android:text="@string/category_food"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_topic_games"
        tools:ignore="RtlHardcoded"/>

    <Button
        android:id="@+id/button_topic_household"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/teal_500"
        android:drawableTop="@drawable/ic_store_light_24dp"
        android:padding="8dp"
        android:text="@string/category_household"
        app:layout_constraintLeft_toRightOf="@+id/button_topic_activities"
        app:layout_constraintRight_toLeftOf="@+id/button_topic_shopping"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"/>

    <Button
        android:id="@+id/button_topic_shopping"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginRight="24dp"
        android:background="@color/blue_500"
        android:drawableTop="@drawable/ic_local_mall_light_24dp"
        android:padding="8dp"
        android:text="@string/category_shopping"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_topic_household"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp"
        tools:ignore="RtlHardcoded"/>

    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>